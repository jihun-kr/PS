{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-std=gnu++14",
                "-g",
                "-lm",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "${fileDirname}/${fileBasename}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}